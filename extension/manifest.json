{
  "name": "SuiSays Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab"],
  "host_permissions": ["https://twitter.com/*", "https://x.com/*"],
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*", "https://x.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
